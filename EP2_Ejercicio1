#inlcude <iostream>
using namespace std;

void returnT (int size){
  for(int i=0; i <= size; i++){
    for(int j=0; j<1; j++){
    cout << "T";
    }
    cout << endl;
  }

for(int i=0; i<= size; i++){
  for(int j= size; j>= i; j--){
  cout << "T";
  }
  cout << endl;
}
}

int main(){
int x;
cout << "Introduce el numero del tamaÃ±o que quieras la piramide";
cin >> x;
cout << returnT(x) << endl;;
}
